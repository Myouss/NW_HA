info:
  title: IBM DB2 for SAP deployment template on Windows
  description: Creates a single VM ready for IBM DB2 and optionally SAP NetWeaver

required:
- instanceName
- instanceType
- zone
- subnetwork
- windowsImage
- windowsImageProject
- db2sidSize
- db2saptmpSize
- db2logSize
- db2sapdataSize
- db2backupSize

properties:
  zone:
    description: Zone to create the resources in.
    type: string

  instanceName:
    description: Hostname of the GCE instance
    type: string
    maxLength: 13

  instanceType:
    description: Machine type to deploy
    type: string
    pattern: "(n1-highmem-2|n1-highmem-4|n1-highmem-8|n1-highmem-16|n1-highmem-32|n1-highmem-64|n1-standard-2|n1-standard-4|n1-standard-8|n1-standard-16|n1-standard-32|n1-standard-64)"

  subnetwork:
    description: The sub network to deploy the instance in.
    type: string

  windowsImage:
    description: windows image name to use. family/windows-cloud to use the latest Google supplied Windows images
    type: string

  windowsImageProject:
    description: The project which the windows image belongs to.
    type: string

  db2sidSize:
    description: Size of D:\ (DB2) - the root diretory of the database instance
    type: integer
    minimum: 8
    default: 8

  db2saptmpSize:
    description: Size of T:\ (Temp) - Which holds the database temporary table space
    type: integer
    minimum: 8
    default: 8

  db2logSize:
    description: Size of L:\ (Logs) - Which holds the database transaction logs
    type: integer
    minimum: 8
    default: 8

  db2logSSD:
    description: SSD toggle for the log drive. If set to true, the log disk will be SSD
    default: true

  db2sapdataSize:
    description: Size of E:\ (Data) - Which holds the database data files
    type: integer
    minimum: 30
    default: 30

  db2sapdataSSD:
    description: SSD toggle for the data drive. If set to true, the data disk will be SSD
    default: true

  db2backupSize:
    description: OPTIONAL - Size of the X:\ (Backup) If set to 0, no disk will be created
    type: integer
    default: 0

  usrsapSize:
    description: OPTIONAL - Only required if you plan on deploying SAP NetWeaver on the same VM as the DB2 database instance. If set to 0, no disk will be created
    type: integer
    default: 0

  networkTag:
    description: OPTIONAL - A network tag can be associated to your instance on deployment. This can be used for firewalling or routing purposes.
    type: string

  publicIP:
    description: OPTIONAL - Defines whether a public IP address should be added to your VM. By default this is set to Yes. Note that if you set this to No without appropriate network nat and tags in place, there will be no route to the internet and thus the installation will fail.
    type: boolean
    default: true

  swapSize:
    description: OPTIONAL - Only required if you plan on deploying SAP NetWeaver on the same VM as the ase database instance. If set to 0, no disk will be created
    type: integer
    default: 0
    
  serviceAccount:
    description: OPTIONAL - Ability to define a custom service account instead of using the default project service account
    type: string
